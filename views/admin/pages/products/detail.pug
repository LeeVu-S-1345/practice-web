extends ../../layouts/default.pug

block main
    if(product.name)
        h1(class="mb-4") #{product.name}

    if(product.price)
        div(class="mb-4") Price: <b>#{product.price}</b>
    
    if(product.discountPercentage)
        div(class="mb-4") Discount: <b>#{product.discountPercentage}%</b>

    if(product.stock)
        div(class="mb-4") Stock: <b>#{product.stock}%</b>
    
    if(product.thumbnail)
        div(class="mb-4")
            img(
                src=product.thumbnail
                style="width: 100px"
            )
    
    if(product.status)
        div(class="mb-4")
            span Status:
            if(product.status ==="active")
                span(class="badge bg-success") Active
            else
                span(class="badge bg-danger") Inactive

    if(product.position)
        div(class="mb-4") Position: <b>#{product.position}</b>

    if(product.description)
        div(class="mb-4") #{product.description}
    
    a(
        href=`${prefixAdmin}/products/edit/${product.prod_id}`
        class="btn btn-warning btn-sm"
    ) Edit
    
    script(src="/admin/js/product.js")